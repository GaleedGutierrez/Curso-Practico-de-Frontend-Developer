mixin titles(title)
    title=title 

mixin style-head(style)
    link(rel="stylesheet", href="../css/"+style)

mixin style-head-responsive(stylesResponsive, screen) 
    link(rel="stylesheet", href="../css/"+stylesResponsive media="screen and (min-width:" +screen+"px)")

mixin figure-img(srcImg, altImg)
    figure(class!=attributes.class)
        img(src="https://drive.google.com/uc?id="+srcImg, alt=altImg)

mixin inputs(classLabel, forLabelIdNameInput, classP, title, classInput, typeInput, placeholderInput, autocompleteInput)
    label(class=classLabel for=forLabelIdNameInput)
        p(class=classP)=title
        input(id=forLabelIdNameInput class=classInput type=typeInput name=forLabelIdNameInput placeholder=placeholderInput autocomplete=autocompleteInput required)
        
mixin button-submit(classInput, valueInput)
    input(class=classInput type="submit" value=valueInput)

mixin logo-yard-sale()
    .logo-container
        figure.logo
            img(src="https://drive.google.com/uc?id=1j2ShTvw2GjJu2Cl0he0c4wvMUC5To__S", alt="Logo Yard Sale")
        h2.logo__title 
            span.logo__title--green Yard 
            |Sale

mixin data-user-p(classLabel, forLabel, classTitle, title, classData, content)
    label(class=classLabel for=forLabel)
        p(class=classTitle)=title
        p(class=classData)=content

mixin product-card-mixin(imgProduct1024, imgProduct800, imgProduct320, altProduct, priceProduct, nameProduct)
    .product-card
        figure(tabindex="0" title=altProduct).product-img-container
            picture
                source(media="(min-width: 1024px)" srcset="https://drive.google.com/uc?id="+imgProduct1024)
                source(media="(min-width: 800px)" srcset="https://drive.google.com/uc?id="+imgProduct800)
                img(src="https://drive.google.com/uc?id="+imgProduct320, alt=altProduct).product-img
        .product-details 
            .product-info
                p.product-price=priceProduct
                p.product-name=nameProduct
            figure(tabindex="0" title="Add to cart icon").add-to-cart 
                img(src="https://drive.google.com/uc?id=1nkWqKAzdlfolis7ICFA_ckW1RhtUX43e", alt="Add to cart icon")

mixin producto-cart-mixin(imgProductCart, altNameTitleProductCart, priceProductcart)
    .shopping-cart 
        figure(tabindex="0" title=altNameTitleProductCart).shopping-cart__img-container 
            img(src="https://drive.google.com/uc?id="+imgProductCart, alt=altNameTitleProductCart).shopping-cart__img
        p.shopping-cart__name=altNameTitleProductCart
        p.shopping-cart__price=priceProductcart

